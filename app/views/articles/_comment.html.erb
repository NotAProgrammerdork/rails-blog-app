<div>
  <h4>Comment by <%= comment.author_name %></h4>
  <p>Posted <%= distance_of_time_in_words(comment.article.created_at, comment.created_at) %></p>
  <p class="comment"><%= comment.body %></p>
  <% if logged_in? %>
    <%= link_to 'delete', article_comment_path(comment.article_id, comment.id),
    method: :delete, data: { confirm: 'Really delete the article?' } %>
  <% end %>
</div>
