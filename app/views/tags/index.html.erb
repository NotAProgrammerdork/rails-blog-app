<h1>All tags</h1>

<ul>
  <% @tags.each do |tag| %>
    <li><%= link_to tag.name, tag_path(tag) %></li>
    <% if logged_in? %>
      <li><%= link_to "delete", tag_path(tag), method: :delete, data: {confirm: "Really delete the tag?"} %></li>
    <% end %>
  <% end %>
</ul>

